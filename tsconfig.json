{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "react-blocks": ["components/index.ts"],
            "react-blocks/esm/*": ["components/*"],
            "react-blocks/lib/*": ["components/*"]
        },
        "target": "esnext",
        "module": "commonjs",
        "jsx": "react",
        "declaration": true,
        "declarationDir": "lib",
        "strict": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": ["components", "global.d.ts"],
    "exclude": ["components/**/demo", "components/**/__tests__"]
}
